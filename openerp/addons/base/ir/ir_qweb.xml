<openerp>
<data>
<template id="contact">
    <address t-ignore="true" class="mb0" itemscope="itemscope" itemtype="http://schema.org/Organization">
        <div t-if="not (('name' in fields)
                     or ('address' in fields and address)
                     or ('city' in fields and city)
                     or ('mobile' in fields and mobile)
                     or ('fax' in fields and fax)
                     or ('website' in fields and website)
                     or ('email' in fields and email))"
             class="css_non_editable_mode_hidden">
            --<span class="text-muted" t-esc="name"/>--
        </div>
        <div t-if="'name' in fields">
            <span itemprop="name" t-esc="name"/>
            <t t-if="options.get('country_image') and 'country_id' in fields and object.country_id.image">
                <span t-field="object.country_id.image" t-field-options='{"widget": "image", "class": "country_flag"}'/>
            </t>
        </div>
        <div itemprop="address" itemscope="itemscope" itemtype="http://schema.org/PostalAddress">
            <div t-if="'address' in fields and address">
                <i t-if="not options.get('no_marker')" class='fa fa-map-marker'/>
                <span itemprop="streetAddress" t-raw="address.replace('\n', options.get('no_tag_br') and ', ' or ('&lt;br/&gt;%s' % ('' if options.get('no_marker') else '&amp;nbsp; &amp;nbsp; ')))"/>
            </div>
            <div t-if="'city' in fields and city">
                <i t-if="not options.get('no_marker')" class='fa fa-map-marker'/>
                <span itemprop="addressLocality" t-esc="city"/>,
                <span itemprop="addressCountry" t-esc="country_id"/>
            </div>
            <div t-if="'phone' in fields and phone"><i t-if="not options.get('no_marker')" class='fa fa-phone'/> <span itemprop="telephone" t-esc="phone"/></div>
            <div t-if="'mobile' in fields and mobile"><i t-if="not options.get('no_marker')" class='fa fa-mobile-phone'/> <span itemprop="telephone" t-esc="mobile"/></div>
            <div t-if="'fax' in fields and fax"><i t-if="not options.get('no_marker')" class='fa fa-file-text-o'/> <span itemprop="faxNumber" t-esc="fax"/></div>
            <div t-if="'website' in fields and website">
                <i t-if="not options.get('no_marker')" class='fa fa-globe'/>
                <a t-att-href="website and '%s%s' % ('http://' if '://' not in website else '',website)"><span itemprop="website" t-esc="website"/></a>
            </div>
            <div t-if="'email' in fields and email"><i t-if="not options.get('no_marker')" class='fa fa-envelope'/> <span itemprop="email" t-esc="email"/></div>
        </div>
    </address>
</template>
 </data>
</openerp>
