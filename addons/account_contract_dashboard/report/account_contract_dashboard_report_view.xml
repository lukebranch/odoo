<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record model="ir.ui.view">
        <field name="name">account.invoice.line.pivot</field>
        <field name="model">account.invoice.line</field>
        <field name="arch" type="xml">
            <pivot string="Invoice Line Entries Analysis">
                <field name="mrr" type="measure"/>
                <!-- <field name="price_subtotal" type="measure"/> -->
                <field name="company_id" type="row"/>
                <field name="account_analytic_id" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="invoice_line_entries_report_search" model="ir.ui.view">
        <field name="name">account.invoice.line.search</field>
        <field name="model">account.invoice.line</field>
        <field name="arch" type="xml">
            <search string="Invoice Line Entries Analysis">
                <group expand="0" string="Group By">
                    <filter string="Active Recurrent Entries" name="MRR" domain="[('asset_end_date','&gt;=', context_today().strftime('%%Y-%%m-%%d')), ('asset_start_date','&lt;=', context_today().strftime('%%Y-%%m-%%d'))]" help="Active recurrent entries"/>
                </group>
            </search>
        </field>
    </record>

    

    <menuitem id="action_contract_dashboard_report" name="MRR Analysis" parent="account.menu_finance_reporting" sequence="8"/>


    <record id="action_contract_dashboard_report_main" model="ir.actions.client">
        <field name="name">Revenue KPIs</field>
        <field name="tag">account_contract_dashboard_main</field>
    </record>

    <record id="action_contract_dashboard_report_forecast" model="ir.actions.client">
        <field name="name">Metrics Forecasting</field>
        <field name="tag">account_contract_dashboard_forecast</field>
    </record>

    <menuitem action="action_contract_dashboard_report_main" id="menu_action_contract_dashboard_report_main" parent="account_contract_dashboard.action_contract_dashboard_report" name="Revenue KPIs"/>
    <menuitem action="action_contract_dashboard_report_forecast" id="menu_action_contract_dashboard_report_forecast" parent="account_contract_dashboard.action_contract_dashboard_report" name="Forecast"/>


    <record id="action_invoice_line_entries_report" model="ir.actions.act_window">
        <field name="name">Invoice Line Entries Analysis</field>
        <field name="res_model">account.invoice.line</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot</field>
        <field name="search_view_id" ref="account_contract_dashboard.invoice_line_entries_report_search"/>
        <field name="context">{'search_default_MRR':1}</field>
        <field name="help">From this view, have an analysis of your different invoice line entries.</field>
    </record>

</data>
</openerp>
