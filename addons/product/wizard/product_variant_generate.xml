<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_product_variant_generation" model="ir.ui.view">
              <field name="name">Product Attributes</field>
              <field name="model">product.variant_generate</field>
              <field name="arch" type="xml">
                <form string="Product Attributes">
                    <p class="oe_grey">
                        <strong>Warning</strong>: adding or deleting attributes
                        will delete and recreate existing variants and lead
                        to the loss of their possible customizations.
                    </p>
                    <field name="attribute_line_ids" widget="one2many_list" context="{'show_attribute': False, 'default_product_tmpl_id': active_id}">
                        <tree string="Variants" editable="bottom">
                            <field name="product_tmpl_id" invisible="1"/>
                            <field name="attribute_id"/>
                            <field name="value_ids" widget="many2many_tags" options="{'no_create_edit': True}" domain="[('attribute_id', '=', attribute_id)]" context="{'default_attribute_id': attribute_id}"/>
                        </tree>
                    </field>
                    <footer>
                        <button name="write_attribute" string="Generate" type="object" class="oe_highlight"  />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
              </field>
        </record>

        <record id="product_variant_generation_action" model="ir.actions.act_window">
            <field name="name">Product Attributes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.variant_generate</field>
            <field name="src_model">product.template</field>
            <field name="view_mode">form</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_product_variant_generation"/>
            <field name="target">new</field>
        </record>
    </data>
</openerp>