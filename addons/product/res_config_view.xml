<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="product_configuration" model="ir.ui.view">
            <field name="name">Product Settings</field>
            <field name="model">base.config.settings</field>
            <field name="inherit_id" ref="base_setup.view_general_configuration"/>
            <field name="arch" type="xml">
            <xpath expr="//group[@name='options']" position="after">
                <group>
                    <label for="id" string="Products"/>
                    <div>
                        <div name="product_variant">
                            <field name="group_product_variant" class="oe_inline"/>
                            <label for="group_product_variant"/>
                        </div>
                    </div>
                </group>
            </xpath>
        </field>
    </record>

</data>
</openerp>