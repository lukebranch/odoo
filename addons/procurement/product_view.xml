<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="product_template_form_view_procurement_button">
            <field name="name">product.template_procurement_stat_button</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='buttons']" position="inside">
                   <button class="oe_stat_button" name="%(procurement.procurement_stat_action_product_template)d"
                           icon="fa-truck" string="Procurements" type="action" 
                           groups="stock.group_adv_location" 
                           attrs="{'invisible':[('type', '=', 'service')]}"/>
                </xpath>
            </field>
        </record>

        <record model="ir.ui.view" id="product_form_view_procurement_button">
            <field name="name">product.product_procurement_stat_button</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='buttons']" position="inside">
                   <button class="oe_stat_button" name="%(procurement.procurement_stat_action_product_product)d"
                           icon="fa-truck" string="Procurements" type="action" 
                           groups="stock.group_adv_location"
                           attrs="{'invisible':[('type', '=', 'service')]}"/>
                </xpath>
            </field>
        </record>
        
    </data>
</openerp>